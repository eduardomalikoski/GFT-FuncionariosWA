@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirme o Registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <br>
<p>
    É obrigatório a confirmação de e-mail!
</p>
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>
</p>
    }
    else
    {
<p>
        Por favor, cheque seu e-mail para confirmar a conta
</p>
    }
}
